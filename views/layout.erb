<!DOCTYPE html>
<html>
<head>
<title>Word Rater</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<link href="/assets/css/bootstrap.min.css" rel="stylesheet">

<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
<![endif]-->
</head>
<body>
<div class="container">
	<div class="navbar navbar-default" role="navigation">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="/">Word Rater</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li><a href="/secure/place">Secret</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">lol<b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li><a href="/login/form">Login</a></li>
					<li class="divider"></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				</li>

			</ul>
		</div><!--/.nav-collapse -->
	</div>
	<div class="text-center">
		<h1 id="topicword">
			<%= word %>
		</h1>
		<h3 id="upval" style="float: left" ><%= up %></h3>
		<h3 id="downval" style="float: right" ><%= down %></h3>
		<div class="button-group">
			<button type="button" id="up" class="btn btn-default" word="<%= word %>" >Good</button>
			<button type="button" id="down" class="btn btn-default" word="<%= word %>" >Bad</button>
		</div>
	</div>

</div>


<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/assets/js/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/assets/js/bootstrap.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$("#up").click(function(){
			var w = $(this).attr("word");
			$.post( "/up/"+ w )
			getNewWord();
		}
	);
	$("#down").click(function(){
			var w = $(this).attr("word");
			$.post( "/down/"+ w )
			getNewWord();
		}
	);
});
function getNewWord(){
	$.get('/word/', function(content){
			result = $.parseJSON(content);
			$('#topicword').html(result['word']);
			$('#up').attr('word', result['word']);
			$('#upval').html(result['up']);
			$('#down').attr('word', result['word']);
			$('#downval').html(result['down']);
			return false;
	});
}
</script>
</body>
</html>
